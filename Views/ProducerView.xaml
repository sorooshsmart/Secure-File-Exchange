<UserControl x:Class="SecureFileExchange.Views.ProducerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:SecureFileExchange.ViewModels"
             xmlns:models="clr-namespace:SecureFileExchange.Models">
    
    <UserControl.DataContext>
        <vm:ProducerViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <!-- Converters -->
        <vm:RecipientTypeConverter x:Key="RecipientTypeConverter"/>
        <vm:RSAEncryptionModeConverter x:Key="RSAEncryptionModeConverter"/>
        
        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#c9d1d9"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,25,0,12"/>
        </Style>

        <Style x:Key="Label" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#7d8590"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <Style x:Key="BrowseButton" TargetType="Button">
            <Setter Property="Background" Value="#21262d"/>
            <Setter Property="Foreground" Value="#c9d1d9"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#30363d"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#30363d"/>
                    <Setter Property="BorderBrush" Value="#58a6ff"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="InputBox" TargetType="TextBox">
            <Setter Property="Background" Value="#0d1117"/>
            <Setter Property="Foreground" Value="#c9d1d9"/>
            <Setter Property="BorderBrush" Value="#30363d"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost"
                                         Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="0">
            
            <!-- Header -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                <Border Background="#238636"
                        Width="40"
                        Height="40"
                        CornerRadius="8"
                        Margin="0,0,12,0">
                    <TextBlock Text="ðŸ“¤" 
                              FontSize="20"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"/>
                </Border>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="File Encryption" 
                              FontSize="20"
                              FontWeight="Bold"
                              Foreground="#c9d1d9"/>
                    <TextBlock Text="Encrypt and sign your files securely"
                              FontSize="12"
                              Foreground="#7d8590"/>
                </StackPanel>
            </StackPanel>

            <!-- Export Public Keys Button -->
            <Button Content="ðŸ“¤ Export My Public Keys"
                   Command="{Binding ExportMyPublicKeysCommand}"
                   Background="#1f6feb"
                   Foreground="White"
                   BorderThickness="0"
                   Padding="15,10"
                   FontSize="13"
                   FontWeight="SemiBold"
                   Cursor="Hand"
                   HorizontalAlignment="Right"
                   Margin="0,0,0,15">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#1f6feb"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#388bfd"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!-- File Selection -->
            <TextBlock Text="ðŸ“ Select File" Style="{StaticResource SectionTitle}"/>
            <Border Background="#0d1117" 
                   CornerRadius="6" 
                   Padding="12"
                   BorderBrush="#30363d"
                   BorderThickness="1"
                   Margin="0,0,0,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox Grid.Column="0"
                            Text="{Binding SelectedFilePath}"
                            IsReadOnly="True"
                            Style="{StaticResource InputBox}"
                            BorderThickness="0"
                            Background="Transparent"
                            VerticalContentAlignment="Center"/>
                    
                    <Button Grid.Column="1"
                           Content="Browse"
                           Command="{Binding BrowseFileCommand}"
                           Style="{StaticResource BrowseButton}"
                           Margin="8,0,0,0"/>
                </Grid>
            </Border>

            <!-- MAC Algorithm -->
            <TextBlock Text="ðŸ”’ MAC Algorithm" Style="{StaticResource SectionTitle}"/>
            <ComboBox SelectedValue="{Binding SelectedMACAlgorithm}"
                     Height="44"
                     Margin="0,0,0,8"
                     FontSize="14">
                <ComboBox.ItemsSource>
                    <x:Array Type="models:MACAlgorithmType">
                        <models:MACAlgorithmType>HMACSHA256</models:MACAlgorithmType>
                        <models:MACAlgorithmType>CMAC</models:MACAlgorithmType>
                        <models:MACAlgorithmType>CCM</models:MACAlgorithmType>
                    </x:Array>
                </ComboBox.ItemsSource>
            </ComboBox>

            <!-- Encryption Method -->
            <TextBlock Text="ðŸ›¡ï¸ Encryption Method" Style="{StaticResource SectionTitle}"/>
            <Border Background="#0d1117"
                    CornerRadius="6"
                    Padding="12"
                    BorderBrush="#30363d"
                    BorderThickness="1"
                    Margin="0,0,0,8">
                <StackPanel>
                    <RadioButton Content="Secure Envelope (Recommended - Fast &amp; Secure for all file sizes)"
                               IsChecked="{Binding SelectedMethod, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=SecureEnvelope}"
                               Foreground="#c9d1d9"
                               Margin="0,0,0,8"
                               GroupName="EncMethod"/>
                    <RadioButton Content="Symmetric Encryption (Requires shared password or key file)"
                               IsChecked="{Binding SelectedMethod, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Symmetric}"
                               Foreground="#c9d1d9"
                               Margin="0,0,0,8"
                               GroupName="EncMethod"/>
                    <RadioButton Content="RSA Direct (âš ï¸ Very limited - Package size restriction ~190 bytes)"
                               IsChecked="{Binding SelectedMethod, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=RSADirect}"
                               Foreground="#f85149"
                               Margin="0,0,0,0"
                               GroupName="EncMethod"/>
                </StackPanel>
            </Border>

            <!-- RSA Direct Mode Selection (NEW) -->
            <Border Visibility="{Binding SelectedMethod, Converter={StaticResource MethodToVisibilityConverter}, ConverterParameter='RSADirect'}">
                <StackPanel>
                    <TextBlock Text="âš™ï¸ RSA Direct Mode" Style="{StaticResource SectionTitle}"/>
                    <Border Background="#0d1117"
                            CornerRadius="6"
                            Padding="12"
                            BorderBrush="#30363d"
                            BorderThickness="1"
                            Margin="0,0,0,8">
                        <StackPanel>
                            <RadioButton Content="With Signature &amp; MAC (Standard - Includes authentication)"
                                       IsChecked="{Binding RSAEncryptionMode, Converter={StaticResource RSAEncryptionModeConverter}, ConverterParameter=WithSignature}"
                                       Foreground="#c9d1d9"
                                       Margin="0,0,0,8"
                                       GroupName="RSAMode"/>
                            <RadioButton Content="No Signature (Educational - Direct RSA only, max 190 bytes)"
                                       IsChecked="{Binding RSAEncryptionMode, Converter={StaticResource RSAEncryptionModeConverter}, ConverterParameter=NoSignature}"
                                       Foreground="#f85149"
                                       Margin="0,0,0,0"
                                       GroupName="RSAMode"/>
                        </StackPanel>
                    </Border>

                    <!-- Warning for No Signature Mode -->
                    <Border Background="#2d1a1f"
                            CornerRadius="6"
                            Padding="12"
                            BorderBrush="#f85149"
                            BorderThickness="1"
                            Margin="0,0,0,8"
                            Visibility="{Binding RSAEncryptionMode, Converter={StaticResource RSAEncryptionModeConverter}, ConverterParameter=NoSignature}">
                        <StackPanel>
                            <TextBlock Text="âš ï¸ WARNING - Educational Mode Only"
                                      Foreground="#f85149"
                                      FontWeight="Bold"
                                      FontSize="13"
                                      Margin="0,0,0,8"/>
                            <TextBlock TextWrapping="Wrap"
                                      Foreground="#ffa198"
                                      FontSize="11"
                                      LineHeight="16">
                                <Run Text="â€¢ This mode does NOT provide authenticity or integrity protection"/>
                                <LineBreak/>
                                <Run Text="â€¢ No digital signature or MAC is used"/>
                                <LineBreak/>
                                <Run Text="â€¢ Maximum file size: 190 bytes"/>
                                <LineBreak/>
                                <Run Text="â€¢ For educational/testing purposes ONLY"/>
                                <LineBreak/>
                                <Run Text="â€¢ NEVER use for real sensitive data"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Recipient Selection -->
            <Border Visibility="{Binding SelectedMethod, Converter={StaticResource MethodToVisibilityConverter}, ConverterParameter='SecureEnvelope,RSADirect'}">
                <StackPanel>
                    <TextBlock Text="ðŸ‘¥ Recipient Type" Style="{StaticResource SectionTitle}"/>
                    <Border Background="#0d1117"
                            CornerRadius="6"
                            Padding="12"
                            BorderBrush="#30363d"
                            BorderThickness="1"
                            Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal">
                            <RadioButton Content="Internal User (Same System)"
                                       IsChecked="{Binding RecipientType, Converter={StaticResource RecipientTypeConverter}, ConverterParameter=Internal}"
                                       Foreground="#c9d1d9"
                                       Margin="0,0,20,0"
                                       GroupName="RecipientType"/>
                            <RadioButton Content="External User (Different System)"
                                       IsChecked="{Binding RecipientType, Converter={StaticResource RecipientTypeConverter}, ConverterParameter=External}"
                                       Foreground="#58a6ff"
                                       GroupName="RecipientType"/>
                        </StackPanel>
                    </Border>

                    <!-- Internal User Selection -->
                    <Border Visibility="{Binding RecipientType, Converter={StaticResource RecipientTypeConverter}, ConverterParameter=Internal}">
                        <StackPanel>
                            <TextBlock Text="ðŸ”‘ Select Consumer User" Style="{StaticResource Label}"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <ComboBox Grid.Column="0"
                                         ItemsSource="{Binding AvailableUsers}"
                                         SelectedItem="{Binding SelectedConsumerUsername}"
                                         Height="44"
                                         FontSize="14"
                                         Margin="0,0,8,8">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" Foreground="#c9d1d9"/>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                                
                                <Button Grid.Column="1"
                                       Content="ðŸ”„"
                                       Command="{Binding RefreshUsersCommand}"
                                       Style="{StaticResource BrowseButton}"
                                       Width="44"
                                       Margin="0,0,0,8"
                                       ToolTip="Refresh user list"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- External User Public Key -->
                    <Border Visibility="{Binding RecipientType, Converter={StaticResource RecipientTypeConverter}, ConverterParameter=External}">
                        <StackPanel>
                            <TextBlock Text="ðŸ”‘ External User Public Keys" Style="{StaticResource Label}"/>
                            <Border Background="#0d1117" 
                                   CornerRadius="6" 
                                   Padding="12"
                                   BorderBrush="#30363d"
                                   BorderThickness="1"
                                   Margin="0,0,0,8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding ExternalRecipientName}"
                                                  Foreground="#58a6ff"
                                                  FontSize="13"
                                                  FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding ExternalPublicKeyPath}"
                                                  Foreground="#7d8590"
                                                  FontSize="11"
                                                  TextTrimming="CharacterEllipsis"/>
                                    </StackPanel>
                                    
                                    <Button Grid.Column="1"
                                           Content="Load Keys"
                                           Command="{Binding BrowseExternalPublicKeyCommand}"
                                           Style="{StaticResource BrowseButton}"
                                           Margin="8,0,0,0"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Symmetric Options -->
            <Border Visibility="{Binding SelectedMethod, Converter={StaticResource MethodToVisibilityConverter}, ConverterParameter='Symmetric'}">
                <StackPanel>
                    <!-- Algorithm Selection -->
                    <TextBlock Text="âš™ï¸ Symmetric Algorithm" Style="{StaticResource SectionTitle}"/>
                    <ComboBox SelectedValue="{Binding SelectedAlgorithm}"
                             Height="44"
                             Margin="0,0,0,8"
                             FontSize="14">
                        <ComboBox.ItemsSource>
                            <x:Array Type="models:SymmetricAlgorithmType">
                                <models:SymmetricAlgorithmType>AES</models:SymmetricAlgorithmType>
                                <models:SymmetricAlgorithmType>DES</models:SymmetricAlgorithmType>
                                <models:SymmetricAlgorithmType>TripleDES</models:SymmetricAlgorithmType>
                            </x:Array>
                        </ComboBox.ItemsSource>
                    </ComboBox>

                    <!-- Mode Selection -->
                    <TextBlock Text="ðŸ”„ Encryption Mode" Style="{StaticResource SectionTitle}"/>
                    <Border Background="#0d1117"
                            CornerRadius="6"
                            Padding="12"
                            BorderBrush="#30363d"
                            BorderThickness="1"
                            Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal">
                            <RadioButton Content="CBC (Recommended)"
                                       IsChecked="{Binding SelectedMode, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=CBC}"
                                       Foreground="#c9d1d9"
                                       Margin="0,0,20,0"
                                       GroupName="Mode"/>
                            <RadioButton Content="ECB"
                                       IsChecked="{Binding SelectedMode, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=ECB}"
                                       Foreground="#c9d1d9"
                                       GroupName="Mode"/>
                        </StackPanel>
                    </Border>

                    <!-- Key Generation Method -->
                    <TextBlock Text="ðŸ” Key Source" Style="{StaticResource SectionTitle}"/>
                    <Border Background="#0d1117"
                            CornerRadius="6"
                            Padding="12"
                            BorderBrush="#30363d"
                            BorderThickness="1"
                            Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal">
                            <RadioButton Content="Password"
                                       IsChecked="{Binding KeyGenMethod, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=Password}"
                                       Foreground="#c9d1d9"
                                       Margin="0,0,20,0"
                                       GroupName="KeyGen"/>
                            <RadioButton Content="File"
                                       IsChecked="{Binding KeyGenMethod, Converter={StaticResource EnumToBoolConverter}, ConverterParameter=File}"
                                       Foreground="#c9d1d9"
                                       GroupName="KeyGen"/>
                        </StackPanel>
                    </Border>

                    <!-- Password Input -->
                    <Border Visibility="{Binding KeyGenMethod, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=Password}">
                        <StackPanel>
                            <TextBlock Text="Shared Password" Style="{StaticResource Label}"/>
                            <PasswordBox x:Name="SharedPasswordBox"
                                        Background="#0d1117"
                                        Foreground="#c9d1d9"
                                        BorderBrush="#30363d"
                                        BorderThickness="1"
                                        Padding="12"
                                        FontSize="14"
                                        Height="44"
                                        Margin="0,0,0,8"
                                        PasswordChar="â—"/>
                        </StackPanel>
                    </Border>

                    <!-- Key File Input -->
                    <Border Visibility="{Binding KeyGenMethod, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=File}">
                        <StackPanel>
                            <TextBlock Text="Key File" Style="{StaticResource Label}"/>
                            <Border Background="#0d1117" 
                                   CornerRadius="6" 
                                   Padding="12"
                                   BorderBrush="#30363d"
                                   BorderThickness="1"
                                   Margin="0,0,0,8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBox Grid.Column="0"
                                            Text="{Binding SharedKeyFilePath}"
                                            IsReadOnly="True"
                                            Style="{StaticResource InputBox}"
                                            BorderThickness="0"
                                            Background="Transparent"
                                            VerticalContentAlignment="Center"/>
                                    
                                    <Button Grid.Column="1"
                                           Content="Browse"
                                           Command="{Binding BrowseKeyFileCommand}"
                                           Style="{StaticResource BrowseButton}"
                                           Margin="8,0,0,0"/>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Progress Bar -->
            <Border Visibility="{Binding Progress, Converter={StaticResource ProgressToVisibilityConverter}}"
                   Margin="0,25,0,0">
                <StackPanel>
                    <Grid Margin="0,0,0,6">
                        <TextBlock Text="{Binding StatusMessage}"
                                  Foreground="#7d8590"
                                  FontSize="13"/>
                        <TextBlock Text="{Binding Progress, StringFormat={}{0}%}"
                                  Foreground="#58a6ff"
                                  FontSize="13"
                                  HorizontalAlignment="Right"/>
                    </Grid>
                    <ProgressBar Value="{Binding Progress}"
                                Maximum="100"
                                Height="8"
                                Background="#0d1117"
                                Foreground="#238636"
                                BorderBrush="#30363d"
                                BorderThickness="1"/>
                </StackPanel>
            </Border>

            <!-- Encrypt Button -->
            <Button Content="ðŸ”’ ENCRYPT FILE"
                   Command="{Binding EncryptCommand}"
                   Click="EncryptButton_Click"
                   Background="#238636"
                   Foreground="White"
                   BorderThickness="0"
                   Padding="0,14"
                   FontSize="14"
                   FontWeight="Bold"
                   Cursor="Hand"
                   Height="48"
                   Margin="0,25,0,0">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#238636"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2ea043"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#21262d"/>
                                <Setter Property="Foreground" Value="#484f58"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

        </StackPanel>
    </ScrollViewer>
</UserControl>